<main class="product">


  <section class="sec sec03">
    <div class="popular_product flex">
      <div class="product__post">

        <div class="ProductImage">

          <ul class="gallery">
            {% for image in product.images %}
              <li><img src="{{ image.src | img_url: 'large' }}" alt=""></li>
            {% endfor %}
          </ul>
          <ul class="choice-btn flex slideItemImage">
            {% for image in product.images %}
              <li><img src="{{ image.src | img_url: 'large' }}" alt=""></li>
            {% endfor %}
          </ul>
        </div>


      </div>

      <div class="product__detail">
        <div class="product__detail__stickey">

          <div class="product__detail__main">
            <p class="maison">{{ product.vendor }}
            </p>
            <h2>{{ product.title }}
            </h2>
            <p class="price">{{ product.price | money }}
            </p>
          </div>
          <div class="product__detail__text">
            <p>{{ product.content }}
            </p>
          </div>
          {%- comment -%}
            <div class="share flex">
            <p class="mini">シェア</p>
            <a href="#"></a>
            <a href="#"></a>
            <a href="#"></a>
            </div>
          {%- endcomment -%}
          <form action="#" class="product__wrap">
            <label for="#">お渡し用袋</label>
            <select name="" id="">
              <option value="不要">不要</option>
              <option value="要">要</option>
            </select>
          </form>

          <form method="post" action="/cart/add" enctype="multipart/form-data">

            <div class="qtydiv counter">


              <div class="qtybox">
                <span class="btnqty qtyminus icon icon-minus">
                  <i class="fas fa-minus"></i>
                </span>
                <span><input type="text" id="quantity" name="quantity" value="1" min="1" class="quantity-selector quantity-input" readonly=""></span>
                <span class="btnqty qtyplus icon icon-plus">
                  <i class="fas fa-plus"></i>
                </span>
              </div>
            </div>

            <input type="hidden" name="id" value={{ product.variants.first.id }}>

            {% assign current_variant = product.selected_or_first_available_variant %}
            {% if current_variant.inventory_quantity > 0 %}

              <button href="#" class="Btn02 bgleft02">
                <span>カートに追加する</span>
              </button>
              {% if current_variant.inventory_quantity < 10 %}
                <span style="color: red;">残り在庫{{ current_variant.inventory_quantity }}
                  個です
                </span>
              {% endif %}
            {% else %}
              <div class="Btn02">
                <span>在庫なし</span>
              </div>
            {% endif %}
          </form>

          <p class="alert">あと<span>7時間0分</span>以内のご注文確定で3月02日（水）〜3月03日(木)の間に商品を受け取る</p>
        </div>
      </div>
    </div>

  </section>

